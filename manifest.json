{
    "manifest_version": 3,
    "name": "Website Time & Click Tracker",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage",
      "idle",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  